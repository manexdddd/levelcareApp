<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="?attr/materialCardViewFilledStyle"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fondocard"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textTSD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="TDS DEL AGUA"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="600 ppm"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/verde"
                android:textSize="33dp" />

            <TextView
                android:id="@+id/tdsCalidad"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_bueno"
                android:fontFamily="@font/nunito"
                android:text="Bueno"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/verde"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="-160dp"
            android:background="@drawable/fondocard"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="NIVEL DEL AGUA"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/nivelAgua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="70 %"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/azul4"
                android:textSize="33dp" />

            <TextView
                android:id="@+id/nivagua"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_nivagua"
                android:fontFamily="@font/nunito"
                android:text="Bueno"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textColor="@color/azul4"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/fondocard"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/textAlertas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="ALERTAS"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/fondoalertas"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_drop" />

                <TextView
                    android:id="@+id/AlertaFuga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Fuga de Agua"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="-130dp"
                android:background="@drawable/fondoalertas"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageButton
                    android:id="@+id/btn_bano"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:scaleType="center"
                    android:background="@drawable/fondo_btn"
                    android:src="@drawable/play_icon"/>

                <TextView
                    android:id="@+id/PausaBaño"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Pausa Baño"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textPH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="PH DEL AGUA"
                android:layout_marginStart="11dp"
                android:textAppearance="?attr/textAppearanceTitleMedium"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/fondoalertas"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/DatoPH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Normal"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textSize="18dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/PH_nivel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:text="600 ppm"
                    android:layout_marginTop="-25dp"
                    android:layout_marginStart="220dp"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/verde"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>