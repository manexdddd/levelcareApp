<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/pattern4"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/textView"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_extrabold"
            android:text="BIENVENIDOSS!!"
            android:layout_marginTop="60dp"
            android:textColor="#000000"
            android:textSize="27sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo_login" />
        <ImageView
            android:id="@+id/logo_login"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/level"
            android:scaleY=".5"
            android:scaleX=".5"
            android:layout_marginTop="-80dp"
          />


        <TextView
            android:id="@+id/textView2"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-55dp"
            android:fontFamily="@font/rubik"
            android:text="Inicia Sesion en tu cuenta"
            android:textColor="#072837"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.google.android.material.textfield.TextInputLayout
            android:fontFamily="@font/rubik"
            android:id="@+id/etLoginUser"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="50dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:hint="Usuario"
            app:hintTextColor="@color/azul4"
            app:startIconDrawable="@drawable/baseline_perm_identity_24">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:ems="12"
                android:background="@drawable/fondoalertas"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etLoginPassword"
        android:layout_width="match_parent"
            android:fontFamily="@font/rubik"
    android:layout_height="65dp"
    android:layout_marginTop="15dp"
    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
    android:hint="ContraseÃ±a"
    app:hintTextColor="@color/azul4"
            app:startIconDrawable="@drawable/outline_lock_24"
    app:passwordToggleEnabled="true">

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:background="@drawable/fondoalertas"
        android:fontFamily="@font/rubik"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />

</com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:fontFamily="@font/rubik"
            android:id="@+id/btnLoginStart"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="LOGIN"
            android:backgroundTint="@color/azul4"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
